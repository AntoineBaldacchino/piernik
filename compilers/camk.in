PROG      = piernik

### gcc-4.7
F90       = h5pfc.openmpi
F90FLAGS  = -ggdb -O0 -fdefault-real-8 -ffree-form -std=gnu -fimplicit-none -ffpe-trap=zero,overflow,invalid -fcheck=all -fno-omit-frame-pointer  -ffree-line-length-none -g -I/usr/include
LDFLAGS   = -Wl,--as-needed -Wl,-O1

ifeq ($(PIERNIK_DEBUG), 1)
   F90FLAGS += -ggdb -O0 -ffpe-trap=zero,overflow,invalid -fcheck=all -fno-omit-frame-pointer
   F90FLAGS += -Wall -W -Wextra -pedantic-errors -Wno-unused-function
else
   F90FLAGS += -O2 -fno-stack-arrays
endif
