use Switch;
use File::Path;
use File::Copy;
system('./makemake',@ARGV);
chdir('source');
if($argc == 2) {
   system('make',$ARGV[1]);
} else {
   system('make');
}
rmtree(['../run']);
mkpath(['../run']);
copy('mhd',"../run/$ARGV[0]");
chmod 0755, "../run/$ARGV[0]";
copy('problem.par','../run/problem.par');
copy('mhd.def','../run/mhd.def');

